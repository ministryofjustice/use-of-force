{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "ignoreDeprecations": "5.0",
    "baseUrl": "."
  },
  "exclude": ["node_modules", "assets/**/*.js", "integration-tests", "cypress.config.ts", "dist", "coverage"],
  "include": ["**/*.js", "**/*.ts"]
}
