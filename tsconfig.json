{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "assets/**/*.js", "integration-tests"],
  "include": ["**/*.js"]
}
