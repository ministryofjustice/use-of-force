{
  "name": "use-of-force",
  "version": "0.0.1",
  "description": "HMPPS Use of force",
  "repository": "git@github.com:ministryofjustice/use-of-force.git",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "start:dev": "npm run build && DEBUG=gov-starter-server* DB_PORT=5433 nodemon server.js | bunyan -o short",
    "start-feature": "NOTIFY_ENABLED=false PORT=3007 NOMIS_AUTH_URL=http://localhost:9091/auth ELITE2API_ENDPOINT_URL=http://localhost:9091 DB_NAME=use-of-force-int DB_PORT=5432 NODE_ENV=development node $NODE_DEBUG_OPTION server.js | bunyan -o short",
    "start-feature:dev": "NOTIFY_ENABLED=false PORT=3007 NOMIS_AUTH_URL=http://localhost:9091/auth ELITE2API_ENDPOINT_URL=http://localhost:9091 DB_NAME=use-of-force-int DB_PORT=5432 NODE_ENV=development nodemon $NODE_DEBUG_OPTION server.js | bunyan -o short",
    "build": "npm run css-build",
    "css-build": "./bin/build-css",
    "clean": "rm -rf assets/* .port.tmp *.log build/* uploads/* test-results.xml",
    "lint": "eslint . --cache --max-warnings 0",
    "typecheck": "tsc",
    "test": "jest",
    "int-test": "DB_NAME=use-of-force-int DB_PORT=5432 cypress run",
    "int-test-ui": "DB_NAME=use-of-force-int DB_PORT=5432 cypress open",
    "migrate": "knex migrate:latest",
    "record-build-info": "node ./bin/record-build-info",
    "send-reminders": "node job/sendReminders"
  },
  "engines": {
    "node": ">=10.15.3",
    "npm": ">=6.4.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "server/**/*.{js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test-results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration-tests/*"
    ],
    "delay": "2500",
    "ext": "js,json,html,njk"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && tsc && npm test"
    }
  },
  "lint-staged": {
    "*.{js,json,css},!package.json,!package-lock.json": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "@hapi/joi-date": "^2.0.1",
    "@ministryofjustice/frontend": "0.0.13-alpha",
    "agentkeepalive": "^4.1.0",
    "applicationinsights": "^1.5.0",
    "applicationinsights-native-metrics": "0.0.5",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "bunyan-request-logger": "^2.1.0",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-redis": "^4.0.3",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^1.3.3",
    "csurf": "^1.10.0",
    "csv-stringify": "^5.3.3",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "express-session": "^1.17.0",
    "govuk-elements-sass": "^3.1.3",
    "govuk-frontend": "^3.3.0",
    "helmet": "^3.21.1",
    "http-errors": "^1.7.3",
    "https-proxy-agent": "^3.0.0",
    "jwt-decode": "^2.2.0",
    "knex": "^0.19.5",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "node-sass-middleware": "0.11.0",
    "notifications-node-client": "^4.6.0",
    "nunjucks": "^3.2.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.5.0",
    "pg": "^7.12.1",
    "pg-format": "^1.0.4",
    "querystring": "^0.2.0",
    "ramda": "^0.26.1",
    "redis": "^2.8.0",
    "sass-middleware": "^0.0.3",
    "superagent": "^5.1.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "cypress": "^3.4.1",
    "cypress-multi-reporters": "^1.2.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-cypress": "^2.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-html-reporter": "^2.6.2",
    "jest-junit": "^8.0.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.2",
    "mocha-junit-reporter": "^1.23.1",
    "nock": "^11.4.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "typescript": "^3.7.5"
  }
}
