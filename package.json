{
  "name": "use-of-force",
  "version": "0.0.1",
  "description": "HMPPS Use of force",
  "repository": "git@github.com:ministryofjustice/use-of-force.git",
  "license": "MIT",
  "scripts": {
    "start": "node server.js",
    "start:dev": "npm build && DEBUG=gov-starter-server* nodemon server.js | bunyan -o short",
    "start-feature": "PORT=3007 NOMIS_AUTH_URL=http://localhost:9091/auth ELITE2API_ENDPOINT_URL=http://localhost:9091 DB_NAME=use-of-force-int DB_PORT=5433 node $NODE_DEBUG_OPTION server.js | bunyan -o short",
    "start-feature:dev": "PORT=3007 NOMIS_AUTH_URL=http://localhost:9091/auth ELITE2API_ENDPOINT_URL=http://localhost:9091 DB_NAME=use-of-force-int DB_PORT=5433 nodemon $NODE_DEBUG_OPTION server.js | bunyan -o short",
    "build": "npm run css-build",
    "css-build": "./bin/build-css",
    "clean": "rm -rf assets/* .port.tmp *.log build/* uploads/* test-results.xml",
    "lint": "eslint . --cache --max-warnings 0",
    "test": "jest",
    "int-test": "DB_NAME=use-of-force-int DB_PORT=5433 cypress run",
    "int-test-ui": "DB_NAME=use-of-force-int DB_PORT=5433 cypress open",
    "migrate": "knex migrate:latest",
    "record-build-info": "node ./bin/record-build-info"
  },
  "engines": {
    "node": ">=10.15.3",
    "npm": ">=6.4.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "server/**/*.{js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server)/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test-results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*"
    ],
    "delay": "2500",
    "ext": "js,json,html,njk"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,css}": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    },
    "ignore": [
      "package.json",
      "package-lock.json"
    ]
  },
  "dependencies": {
    "agentkeepalive": "^4.0.2",
    "applicationinsights": "^1.4.0",
    "applicationinsights-native-metrics": "0.0.5",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "bunyan-request-logger": "^2.0.1",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.4",
    "cookie-session": "^2.0.0-beta.3",
    "csurf": "^1.10.0",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "express-request-id": "^1.4.1",
    "govuk-elements-sass": "^3.1.3",
    "govuk-frontend": "^2.12.0",
    "helmet": "^3.18.0",
    "http-errors": "~1.6.3",
    "joi": "^14.3.1",
    "joi-date-extensions": "^1.2.0",
    "joi-postcode": "^3.0.0",
    "jquery": "^3.4.1",
    "jwt-decode": "^2.2.0",
    "knex": "^0.16.5",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "node-sass-middleware": "0.11.0",
    "nunjucks": "^3.2.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.5.0",
    "pg": "^7.11.0",
    "querystring": "^0.2.0",
    "ramda": "^0.25.0",
    "sass-middleware": "^0.0.3",
    "superagent": "^5.1.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "cypress": "^3.4.0",
    "cypress-multi-reporters": "^1.1.22",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "jest-html-reporter": "^2.5.0",
    "jest-junit": "^6.4.0",
    "lint-staged": "^7.3.0",
    "mocha": "^6.1.4",
    "mocha-junit-reporter": "^1.23.0",
    "nock": "^10.0.6",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2"
  }
}
